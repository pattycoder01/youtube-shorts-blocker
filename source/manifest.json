{
    "manifest_version": 2,
    "name": "ShortsBlocker",
    "version": "1.0",
    "description": "Block YouTube Shorts to prevent doomscrolling",
    "permissions": [
        "https://www.youtube.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://www.youtube.com/shorts/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}